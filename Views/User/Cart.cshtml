@model P2WebMVC.Models.ViewModels.CartView
@{
    ViewData["Title"] = "Shopping Bag";
}

<style>
body {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 1200px;
    margin: 50px auto;
    padding: 0 20px;
}

h2 {
    font-weight: 700;
    font-size: 36px;
    margin-bottom: 40px;
    text-transform: uppercase;
}

.cart-left {
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 20px;
}

.cart-item {
    display: flex;
    gap: 20px;
    border-bottom: 1px solid #e5e5e5;
    padding: 15px 0;
    align-items: center;
}

.cart-item img {
    width: 120px;
    object-fit: cover;
    border-radius: 8px;
}

.cart-details {
    flex: 1;
}

.cart-details h6 {
    font-weight: 700;
    margin-bottom: 6px;
}

.cart-details p {
    margin: 2px 0;
    color: #555;
    font-size: 14px;
}

.cart-details .fw-semibold {
    font-weight: 600;
    margin-top: 4px;
}

.cart-actions {
    display: flex;
    gap: 8px;
    margin-top: 8px;
}

.cart-actions button {
    border: 1px solid #ccc;
    background: #fff;
    width: 30px;
    height: 30px;
    font-size: 18px;
    line-height: 0;
    cursor: pointer;
    transition: 0.3s;
}

.cart-actions button:hover {
    background: #f2f2f2;
}

.btn-black {
    background-color: #000;
    color: #fff;
    text-transform: uppercase;
    font-weight: 700;
    border: none;
    padding: 12px 20px;
    width: 100%;
    transition: 0.3s;
}

.btn-black:hover {
    background-color: #333;
}

.cart-right {
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    position: sticky;
    top: 20px;
    height: fit-content;
}

.cart-right .total-row {
    display: flex;
    justify-content: space-between;
    margin: 10px 0;
}

.cart-right .border-top {
    border-top: 1px solid #e5e5e5;
    margin: 15px 0;
}

.empty-cart {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
}

.empty-cart img {
    max-width: 150px;
    margin-bottom: 20px;
}

.empty-cart h5 {
    font-weight: 600;
    margin-bottom: 10px;
}

.empty-cart p {
    color: #555;
    max-width: 350px;
    margin-bottom: 20px;
}
</style>

<div class="container py-5">
    <h2 class="fw-bold fs-1 mb-5">SHOPPING BAG</h2>

    @if (Model?.CartProducts != null && Model.CartProducts.Any())
    {
        <div class="row">
            <div class="col-lg-7 cart-left">
                @foreach (var cartProduct in Model.CartProducts)
                {
                    <div class="cart-item">
                        <img src="@cartProduct?.Product?.ProductImage" alt="Product" />
                        <div class="cart-details">
                            <h6>@cartProduct.Product.ProductName</h6>
                            <p>Colour: @cartProduct.Product.Color</p>
                            <p>Size: @cartProduct.Product.Size</p>
                            <p>Quantity: @cartProduct.Quantity</p>
                            <p class="fw-semibold">Total: Rs. @(cartProduct.Quantity * cartProduct.Product.ProductPrice)</p>

                           <form method="post" asp-controller="Product" asp-action="UpdateQuantity" class="d-inline">
                                <input type="hidden" name="ProductId" value="@cartProduct.ProductId" />
                                <button type="submit" name="action" value="decrease" class="btn border px-3">−</button>
                                <span class="mx-2">@cartProduct.Quantity</span>
                                <button type="submit" name="action" value="increase" class="btn border px-3">＋</button>
                            </form>
                        </div>


                        <form asp-controller="Product" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="ProductId" value="@cartProduct.ProductId" />
                            <button type="submit" class="btn btn-sm btn-outline-danger ms-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </form>
                    </div>
                }
            </div>

            <div class="col-lg-5 cart-right">
                <div class="total-row">
                    <span>Order value</span>
                    <span>Rs. @Model?.Cart?.CartTotal</span>
                </div>
                <div class="total-row">
                    <span>Estimated delivery fee</span>
                    <span>FREE</span>
                </div>
                <div class="border-top"></div>
                <div class="total-row fw-bold">
                    <span>Total</span>
                    <span>Rs. @Model?.Cart?.CartTotal</span>
                </div>

                <a class="btn btn-black mt-3" asp-controller="Order" asp-action="Checkout" asp-route-CartId="@Model?.Cart?.CartId">
                    CONTINUE TO CHECKOUT
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <img src="~/assets/bag.png" alt="Empty Bag" />
            <h5>Your Bag Feels Too Light!</h5>
            <p>Looks like your bag is empty. Fill it with things that make you feel stylish.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-black px-4 py-2 mt-2">GET SHOPPING</a>
        </div>
    }
</div>
