@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white rounded-2xl shadow-lg w-full max-w-md p-8">
        <!-- Nike Logo -->
        <div class="flex justify-center mb-6">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg" 
                     alt="Nike" class="h-5">
            </a>
        </div>

        <!-- Title -->
        <h2 class="text-2xl font-bold text-center mb-6">Create your account</h2>

        <!-- Register Form -->
        <form asp-controller="User" asp-action="Register" method="post" class="space-y-4">

            <!-- Username -->
            <div>
                <label for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input type="text" name="Username" id="Username" required
                       class="w-full px-4 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-black transition" />
            </div>

            <!-- Email -->
            <div>
                <label for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" name="Email" id="Email" required
                       class="w-full px-4 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-black transition" />
            </div>

            <!-- Password -->
            <div>
                <label for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input type="password" name="Password" id="Password" required
                       class="w-full px-4 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-black focus:border-black transition" />
            </div>

            <!-- Terms -->
            <div class="flex items-center text-sm">
                <input type="checkbox" id="check"
                       class="h-4 w-4 text-black border-gray-300 rounded focus:ring-black" required />
                <label for="check" class="ml-2 text-gray-700">I agree to the terms & conditions</label>
            </div>

            <!-- Centered Black Register Button -->
            <div class="flex justify-center my-4">
                <button type="submit"
                        class="bg-black text-black py-2 px-6 rounded-xl font-medium hover:bg-gray-800 transition">
                    Sign Up
                </button>
            </div>

            <!-- Full-width Black Register Button -->
            <button type="submit"
                    class="w-full bg-black text-white py-3 rounded-xl font-medium hover:bg-gray-800 transition">
                Register
            </button>
        </form>

        <!-- Sign In Link -->
        <p class="text-center text-sm text-gray-600 mt-6">
            Already have an account? 
            <a asp-controller="User" asp-action="Login" class="text-black font-medium hover:underline">Sign In</a>
        </p>
    </div>
</section>
