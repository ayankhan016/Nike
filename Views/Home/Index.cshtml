@{
    ViewData["Title"] = "Home";
}

<!-- Banner Image -->
<div class="w-full mt-2 overflow-hidden">
    <img src="~/images/image1.png" alt="Nike Banner"
        class="w-full h-[300px] md:h-[450px] lg:h-[550px] object-cover" />
</div>

<div class="text-center mt-10">
    <h1 class="font-extrabold uppercase text-yellow-400"
        style="font-family: 'Anton', sans-serif; font-size: clamp(2rem, 5vw, 4rem); line-height: 1.1;">
        JUST DO IT
    </h1>
</div>

<!-- Container for all rows -->
<div class="flex flex-col gap-6 px-4 md:px-8 lg:px-16">

    <!-- First Row -->
    <div class="flex flex-col md:flex-row gap-6">
        <!-- Left image -->
        <div class="w-full md:w-1/2 relative">
            <img src="~/images/featured1.jpg" alt="Training Essentials"
                class="w-full h-[500px] object-cover rounded-2xl">
            <div class="absolute bottom-6 left-6 text-black font-bold">
                <h3 class="text-xl">Training Essentials</h3>

            </div>
        </div>

        <!-- Right image -->
        <div class="w-full md:w-1/2 relative">
            <img src="~/images/featured2.jpg" alt="Total 90" class="w-full h-[500px] object-cover rounded-2xl">
            <div class="absolute bottom-6 right-6 text-black text-right font-bold">
                <p class="text-lg">Look of Football</p>
                <h3 class="text-2xl">Total 90</h3>

            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="flex flex-col md:flex-row gap-6">
        <!-- Left image -->
        <div class="w-full md:w-1/2 relative">
            <img src="~/images/featured3.jpg" alt="Running Shoes" class="w-full h-[500px] object-cover rounded-2xl">
            <div class="absolute bottom-6 left-6 text-black font-bold">
                <h3 class="text-xl">Sneakers
                    
                </h3>

            </div>
        </div>

        <!-- Right image -->
        <div class="w-full md:w-1/2 relative">
            <img src="~/images/featured4.jpg" alt="Basketball Gear" class="w-full h-[500px] object-cover rounded-2xl">
            <div class="absolute bottom-6 right-6 text-black text-right font-bold">
               

            </div>
        </div>
    </div>
</div>
<!-- Shop by Icons - Big Nike Style with Proper Gaps -->
<div class="mt-12 px-4 md:px-8 lg:px-16">
    <h2 class="text-5xl font-extrabold mb-8"></h2>

    <div class="relative">
        <!-- Scrollable Row -->
        <div id="iconRow" class="flex gap-20 md:gap-24 overflow-x-auto scrollbar-hide scroll-smooth py-6">
            <!-- Air Force 1 -->
            <div class="min-w-[200px] flex flex-col items-center text-center cursor-pointer">
                <div class="w-44 h-44 rounded-full bg-gray-100 flex items-center justify-center shadow-xl group-hover:shadow-3xl transition-all duration-300">
                    <img src="~/images/AirForce1.png" alt="Air Force 1" class="w-28 h-28 object-contain">
                </div>
                <p class="mt-6 text-2xl font-extrabold text-gray-900">Air Force 1</p>
            </div>

            <!-- Air Jordan -->
            <div class="min-w-[200px] flex flex-col items-center text-center cursor-pointer">
                <div class="w-44 h-44 rounded-full bg-gray-100 flex items-center justify-center shadow-xl group-hover:shadow-3xl transition-all duration-300">
                    <img src="~/images/Air Jordan.png" alt="Air Jordan " class="w-28 h-28 object-contain">
                </div>
                <p class="mt-6 text-2xl font-extrabold text-gray-900">Air Jordan </p>
            </div>

            <!-- Air Max -->
            <div class="min-w-[200px] flex flex-col items-center text-center cursor-pointer">
                <div class="w-44 h-44 rounded-full bg-gray-100 flex items-center justify-center shadow-xl group-hover:shadow-3xl transition-all duration-300">
                    <img src="~/images/AirMax.png" alt="Air Max" class="w-28 h-28 object-contain">
                </div>
                <p class="mt-6 text-2xl font-extrabold text-gray-900">Air Max</p>
            </div>

            <!-- Dunk -->
            <div class="min-w-[200px] flex flex-col items-center text-center cursor-pointer">
                <div class="w-44 h-44 rounded-full bg-gray-100 flex items-center justify-center shadow-xl group-hover:shadow-3xl transition-all duration-300">
                    <img src="~/images/Dunk.png" alt="Dunk" class="w-28 h-28 object-contain"> 
                </div>
                <p class="mt-6 text-2xl font-extrabold text-gray-900">Dunks</p>
            </div>
        </div>
<section class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Shop by Sport</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-6">
      
      <!-- Running -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-xl">
          <img src="~/images/image4.png" alt="Running" class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105">
        </div>
        <h3 class="mt-3 text-center text-gray-900 font-semibold group-hover:text-nike-orange transition-colors">Running</h3>
      </div>

      <!-- Basket Ball -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-xl">
          <img src="~/images/Basket Ball.png" alt="Basket Ball" class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105">
        </div>
        <h3 class="mt-3 text-center text-gray-900 font-semibold group-hover:text-nike-orange transition-colors">Basket Ball</h3>
      </div>

     
      <!-- Football -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-xl">
          <img src="~/images/football.png" alt="Football" class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105">
        </div>
        <h3 class="mt-3 text-center text-gray-900 font-semibold group-hover:text-nike-orange transition-colors">Football</h3>
      </div>

      <!-- Tennis -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-xl">
          <img src="~/images/tennis.png" alt="Tennis" class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105">
        </div>
        <h3 class="mt-3 text-center text-gray-900 font-semibold group-hover:text-nike-orange transition-colors">Tennis</h3>
      </div>

     
      <!-- Skateboarding -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-xl">
          <img src="~/images/skateboarding.png" alt="Skateboarding" class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105">
        </div>
        <h3 class="mt-3 text-center text-gray-900 font-semibold group-hover:text-nike-orange transition-colors">Skateboarding</h3>
      </div>

      <!-- Yoga -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-xl">
          <img src="~/images/yoga.png" alt="yoga" class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105">
        </div>
        <h3 class="mt-3 text-center text-gray-900 font-semibold group-hover:text-nike-orange transition-colors">Yoga</h3>
      </div>

    </div>
  </div>
</section>

<style>
  .text-nike-orange {
    color: #FF4C00; /* Nike-style hover color */
  }
</style>



<!-- Notification Bar -->
<div class="notification_bar px-4 max-w-3xl mx-auto mt-4 space-y-3">
    @* ... notification code stays same ... *@
</div>


@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
{
    <div class="relative flex items-start bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg"
        role="alert">
        <svg class="w-5 h-5 mt-1 mr-2 flex-shrink-0 text-green-600" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <span class="flex-grow">@ViewBag.SuccessMessage</span>
        <button type="button" onclick="this.parentElement.remove()"
            class="text-green-700 hover:text-green-900 ml-4 font-bold text-xl leading-none">&times;</button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="relative flex items-start bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
        <svg class="w-5 h-5 mt-1 mr-2 flex-shrink-0 text-red-600" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path d="M18.364 5.636l-12.728 12.728M5.636 5.636l12.728 12.728" stroke-linecap="round"
                stroke-linejoin="round" />
        </svg>
        <span class="flex-grow">@TempData["ErrorMessage"]</span>
        <button type="button" onclick="this.parentElement.remove()"
            class="text-red-700 hover:text-red-900 ml-4 font-bold text-xl leading-none">&times;</button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
