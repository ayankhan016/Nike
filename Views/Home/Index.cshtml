    <div class="relative flex items-start bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg"
        role="alert">
        <svg class="w-5 h-5 mt-1 mr-2 flex-shrink-0 text-green-600" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <span class="flex-grow">@TempData["SuccessMessage"]</span>
        <button type="button" onclick="this.parentElement.remove()"
            class="text-green-700 hover:text-green-900 ml-4 font-bold text-xl leading-none">&times;</button>
    </div>
}
</div>