@model P2WebMVC.Models.ViewModels.ProductView
@{
    ViewData["Title"] = "Products";
}

<style>
    /* Global Styles */
    body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-weight: 700;
        font-size: 28px;
        margin-bottom: 30px;
        text-transform: uppercase;
        text-align: center;
    }

   .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 16px;
    padding: 0 10px;
}
.product-card {
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 1px 6px rgba(0, 0, 0, 0.08);


    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

   .product-card img {
    width: 100%;
    height: 150px;
    object-fit: contain;
    background: #f7f7f7;
    padding: 10px;
}


    .product-card:hover img {
        transform: scale(1.05);
    }

    .product-info {
        padding: 12px;
    }

    .product-name {
        font-weight: 600;
        font-size: 1rem;
    
    }

    .product-price {
        font-weight: 700;
        color: #111;
        font-size: 1.1rem;
        margin: 5px 0;
    }

    .product-description {
    font-size: 0.8rem;
    color: #777;
}


    .color-options {
        display: flex;
        gap: 5px;
        margin: 10px 0;
    }

    .color-option {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 1px solid #ddd;
        cursor: pointer;
    }

    .color-option:hover {
        border-color: #111;
    }

    .product-actions {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        flex-wrap: wrap;
    }

  .btn {
    padding: 6px 12px;
    font-size: 0.75rem;
}


    .btn-outline-dark {
        border: 1px solid #111;
        color: #111;
        background-color: transparent;
    }

    .btn-dark {
        background-color: #111;
        color: #fff;
        border: none;
    }
.btn-danger {
    background-color: transparent;
    color: #000000;
}
.btn-danger:hover {
    background-color: #000000;
    color: white;
}



    .btn-outline-dark:hover {
        background-color: #111;
        color: #fff;
    }

    .btn-dark:hover {
        background-color: #333;
    }

    .btn-danger:hover {
        background-color: #b32d3a;
    }
</style>

<h2>@ViewBag.Category</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info text-center">@ViewBag.Message</div>
}
else
{
    <div class="product-grid">
        @foreach (var product in Model.Products)
        {
            <div class="product-card">
                <a asp-controller="Product" asp-action="Details" asp-route-ProductId="@product.ProductId">
                    <img src="@product.ProductImage" alt="@product.ProductName" />
                </a>
                <div class="product-info">
                    <p class="product-description">@product.ProductDescription</p>
                    <h6 class="product-name">@product.ProductName</h6>
                    <p class="product-price">Rs.@product.ProductPrice.ToString("N2")</p>

                    @if (!string.IsNullOrEmpty(product.Color))
                    {
                        var colors = product.Color.Split(',', StringSplitOptions.RemoveEmptyEntries);
                        <div class="color-options">
                            @foreach (var clr in colors.Take(4))
                            {
                                <div class="color-option" style="background-color: @clr.Trim();"></div>
                            }
                            @if (colors.Length > 4)
                            {
                                <span class="text-muted">+@((colors.Length - 4).ToString())</span>
                            }
                        </div>
                    }

                    <div class="product-actions">
                        <a asp-controller="Product" asp-action="Details" asp-route-ProductId="@product.ProductId"
                           class="btn btn-outline-dark">Details</a>

                        <form asp-controller="Product" asp-action="AddToCart" method="post" class="d-inline">
                            <input type="hidden" name="ProductId" value="@product.ProductId" />
                            <button type="submit" class="btn btn-dark">Add to Cart</button>
                        </form>

                        <!-- REMOVE BUTTON -->
                        <form asp-controller="Product" asp-action="Delete" method="post" class="d-inline ms-2">
                            <input type="hidden" name="ProductId" value="@product.ProductId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
